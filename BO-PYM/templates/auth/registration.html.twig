{% extends 'layout.html.twig' %}
{% block stylesheets %}
    {{ encore_entry_link_tags('userRegistration') }}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('userRegistration') }}
{% endblock %}

{% block body %}

    {% if app.user %}
        <div class="card">
            <div class="card-header bg-dark ">
                <h4>Ajouter un utilisateur</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-10">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                    </div>
                    <div class="col-1"></div>
                </div>
                <div class="btns row justify-content-around">
                    <a href="{{ path('users') }}" class="btn btn-secondary btn-back">Annuler</a>
                    <button type="submit" class="btn btn-success btn-add">Ajouter</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>

    {% else %}
        <h1>Vous n'avez pas accés à cette page.</h1>
    {% endif %}

{% endblock %}
