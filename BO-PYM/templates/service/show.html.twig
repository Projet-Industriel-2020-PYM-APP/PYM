{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <h1>Service</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ service.title }}</td>
            </tr>
            <tr>
                <th>Categorie_id</th>
                <td>{{ service.categorieId }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ service.subtitle }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ service.address }}</td>
            </tr>
            <tr>
                <th>Img_url</th>
                <td>{{ service.imgUrl }}</td>
            </tr>
            <tr>
                <th>Actions</th>
                <td>{{ service.actions ? service.actions|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ service.telephone }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ service.website }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('service_index') }}">back to list</a>

    <a href="{{ path('service_edit', {'id': service.id}) }}">edit</a>

    {{ include('service/_delete_form.html.twig') }}
{% endblock %}
